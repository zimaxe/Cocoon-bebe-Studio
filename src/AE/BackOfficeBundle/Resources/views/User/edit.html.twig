{% extends "AEBookingBundle::layout.html.twig" %}


{% block body %}

    <div class="col-md-4 col-md-offset-4">
        <h1>S'enregistrer</h1>

        {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.email) }}
        </div>
        <div class="form-group">
            {{ form_row(form.plainPassword.first) }}
        </div>
        <div class="form-group">
            {{ form_row(form.plainPassword.second) }}
        </div>
        <div class="form-group">
            {{ form_row(form.roles) }}
        </div>
        <div class="checkbox">
            <label for="">
                {{ form_row(form.isActive) }} Activer cet utilisateur
            </label>
        </div>
        <button type="submit" class="btn btn-primary">S'enregister</button>
        {{ form_end(form) }}

        </form>

    </div>
{% endblock %}

