{% extends "AEBackOfficeBundle::layout.html.twig" %}

{% block title %} {{  parent() }} - Editer une maternité{% endblock %}


{% block body %}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <h2>
                    <i class="fa fa-hospital-o"></i>&nbsp;{{ 'Gestion des Maternités'|upper }}
                    <small>Editer {{ maternity.name|capitalize }}</small>
                </h2>
            </header>
            <div class="panel-body">
                <a href="{{ path('ae_backoffice_maternity_index') }}">
                    <button class="btn btn-danger btn-shadow"><i class="fa fa-long-arrow-left"></i>&nbsp;&nbsp;RETOUR</button>
                </a>
            </div>
        </section>
    </div>
</div>


<div class="row">
    <div class="col-lg-7">
        <section class="panel">
            <header class="panel-heading">
                Editer une Maternité
            </header>

            <div class="panel-body">

                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_row(form.name) }}
                </div>

                <fieldset>
                    <div class="checkbox">
                        <label for="">
                            {{ form_row(form.isActive) }} Activer cette maternité
                        </label>
                    </div>
                </fieldset>

            </div>

        </section>
    </div>


    <div class="col-lg-5">
        <section class="panel">
            <header class="panel-heading">
                Enregistrement
            </header>
            <div class="panel-body">
                <button type="submit" class="btn btn-success btn-lg btn-block btn-shadow">Editer</button>
            </div>
        </section>
    </div>

    {{ form_end(form) }}
</div>
{% endblock %}