<div class="col-md-4 col-md-offset-4">
    <h1>Prendre Rendez-vous !</h1>
    <hr>

    {{ form_start(form) }}
    <div class="form-group">
        {{ form_row(form.maternity) }}
    </div>
    <div class="form-group">
        {{ form_row(form.orderDate) }}
    </div>
    <div class="form-group">
        {{ form_row(form.name, {'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
        {{ form_row(form.firstName, {'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
        {{ form_row(form.babyName, {'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
        {{ form_row(form.babyName, {'attr': {'class': 'form-control', 'required': false} }) }}
    </div>
    <div class="form-group">
        {{ form_row(form.babyFirstName, {'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
        {{ form_row(form.dateBirth) }}
    </div>
    <div class="form-group">
        {{ form_row(form.gender) }}
    </div>
    <div class="form-group">
        {{ form_row(form.weight, {'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
        {{ form_row(form.height, {'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
        {{ form_row(form.address, {'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
        {{ form_row(form.zip, {'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
        {{ form_row(form.city, {'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
        {{ form_row(form.phone, {'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
        {{ form_row(form.mobileMother, {'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
        {{ form_row(form.mobileFather, {'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
        {{ form_row(form.emailMother, {'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
        {{ form_row(form.emailFather, {'attr': {'class': 'form-control'} }) }}
    </div>

    <button type="submit" class="btn btn-primary">Ajouter</button>
    {{ form_end(form) }}

    </form>

    <hr>
</div>